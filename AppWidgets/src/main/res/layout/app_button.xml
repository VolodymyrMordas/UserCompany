<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/app_btn"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="38dp">
    <LinearLayout
        android:id="@+id/app_btn_icon_wrapper"
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/app_btn_icon"
            android:layout_width="40dp"
            android:layout_height="38dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/app_btn_text_wrapper"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:textColor="@color/app_base_text_color"
            android:textSize="@dimen/app_base_text_size"
            android:id="@+id/app_btn_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>